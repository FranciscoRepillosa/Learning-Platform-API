html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/home.css")
        title Document
    body
    .top-nav-container
        input#searchBox(className="search-box" type="text" placeholder="search courses and hit enter")

    h1(style="text-align:center;")= "My courses"

    #courseCardContainer
        each course in courses
            a(href=`../courses/${course.courseId}/show`) 
                .course-card
                    h2.course-card-title= course.name

    script(src='/scripts/home.js')
