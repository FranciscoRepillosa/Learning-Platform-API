doctype html
head
  meta(charset='utf-8')
  title Accept a payment
  meta(name='description' content='A demo of a payment on Stripe')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/styles/checkout/new.css')
  script(src='https://js.stripe.com/v3/')
  script(src='/scripts/checkout/new.js' defer='')
// Display a payment form

body
  form#payment-form(courseId=course._id)
    .courseDetailContainer
      p= course.description
      span= course.priceInCents / 100+" $"
    #link-authentication-element
      // Stripe.js injects the Link Authentication Element
    #payment-element
      // Stripe.js injects the Payment Element
    button#submit()
      #spinner.spinner.hidden
      span#button-text Pay now
    #payment-message.hidden